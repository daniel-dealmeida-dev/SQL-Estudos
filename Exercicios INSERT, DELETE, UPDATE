-- INSERTS


-- Inserir um novo funcionário
insert into employees (
    employee_id, first_name, last_name, email, phone_number,
    hire_date, job_id, salary, department_id
) values (
    1000, 'Lucas', 'Silva', 'lucas.silva@empresa.com', '555-1234',
    current_date(), 'IT_PROG', 6000, 60
);

-- Adicionar um novo departamento
insert into departments (department_id, department_name, location_id)
values (500, 'Marketing', 1800);

-- Inserir histórico de trabalho de um funcionário
insert into job_history (
    employee_id, start_date, end_date, job_id, department_id
) values (
    102, '2019-01-15', '2021-05-30', 'IT_PROG', 90
);

-- Adicionar um novo cargo
insert into jobs (job_id, job_title, min_salary, max_salary)
values ('IT_PROG2', 'Senior IT Programmer', 7000, 12000);

-- Inserir novo local de trabalho
insert into locations (
    location_id, street_address, postal_code, city, state_province, country_id
) values (
    3300, '123 Sunset Blvd', '90028', 'Los Angeles', 'CA', 'US'
);


-- DELETES


-- Excluir funcionários com salário < 3000 ou cargo 'IT_PROG'
delete from employees
where salary < 3000 or job_id = 'IT_PROG';

-- Remover departamento com ID 100
delete from departments
where department_id = 100;

-- Apagar registros do funcionário 108 em job_history
delete from job_history
where employee_id = 108;

-- Remover cargos com salário mínimo menor que 2000
delete from jobs
where min_salary < 2000;

-- Remover cargos com salário mínimo entre 2000 e 3000
delete from jobs
where min_salary between 2000 and 3000;

-- Excluir localizações do país 'CN'
delete from locations
where country_id = 'CN';


-- UPDATES


-- Aumentar salário em 10% para funcionários do departamento 90
update employees
set salary = salary + salary * 0.10
where department_id = 90;

-- Alterar nome do departamento 70
update departments
set department_name = 'Client Relations'
where department_id = 70;

-- Alterar nome e localização do departamento 70
update departments
set department_name = 'Client Relations',location_id = 2800
where department_id = 70;

-- Atualizar cargo dos funcionários do departamento 60
update employees
set job_id = 'SA_REP'
where department_id = 60;

-- Alterar salário mínimo e máximo do cargo IT_PROG
update jobs
set min_salary = 4500,max_salary = 9000
where job_id = 'IT_PROG';

-- Atualizar job_id para funcionários ST_CLERK do departamento 50
update employees
set job_id = 'ST_MAN'
where job_id = 'ST_CLERK'
and department_id = 50;

